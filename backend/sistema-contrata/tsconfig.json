{
  "compilerOptions": {
    "target": "es2020",                    // Target de ECMAScript que estás utilizando
    "module": "commonjs",                  // Módulo utilizado (CommonJS para Node.js)
    "esModuleInterop": true,               // Habilita interoperabilidad entre módulos ES y CommonJS
    "forceConsistentCasingInFileNames": true,  // Fuerza consistencia en los nombres de archivos
    "strict": true,                        // Estricta verificación de tipos
    "skipLibCheck": true,                  // Omite la verificación de las definiciones de tipos en node_modules
    "resolveJsonModule": true,             // Permite importar archivos JSON
    "typeRoots": ["./node_modules/@types", "./types"],  // Ubicación de tipos
    "outDir": "./dist",                    // Directorio de salida para archivos compilados
    "rootDir": ".",                        // Directorio raíz del código fuente
    "moduleResolution": "node",            // Resuelve los módulos como Node.js
    "allowSyntheticDefaultImports": true,  // Permite importaciones por defecto en módulos que no tienen exportación por defecto
    "experimentalDecorators": true,        // Permite usar decoradores (si fuera necesario)
    "emitDecoratorMetadata": true,
    "types": ["node", "jest"]        // Genera metadatos para decoradores (opcional)
  },
  "include": ["backend/**/*.ts", "scripts/**/*.ts", "./test"],  // Incluye los archivos TypeScript en estos directorios
  "exclude": ["node_modules", "dist"],  
  "files": ["./hardhat.config.ts"]               // Excluye node_modules y la carpeta de salida
} 
